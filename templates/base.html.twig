<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Jobeet{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    {% endblock %}

</head>
<body>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="=navbar-header">
            <form class="navbar-form" method="get">
                <a class="navbar-brand" href="{{ url('job.list') }}">Jobeet</a>
                <div class="form-group navbar-right">
                    <a href="{{ url('job.new') }}" class="btn btn-primary navbar-btn">Post a job</a>
                </div>
            </form>
            <form class="navbar-form navbar-right" action="{{ url("job.search") }}" method="get">
                <div class="form-group">
                    <input type="search" name="q" value="{{ lastQuery|default('') }}" class="form-control search-field">
                    <input type="submit" class="btn btn-default" value="Search">
                </div>
                &nbsp;
            </form>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}{% endblock %}
</body>

</html>

